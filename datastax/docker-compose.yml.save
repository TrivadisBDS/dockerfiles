version: '2'

services:
    
  # DataStax Enterprise
  dse:
    image: trivadisbds/dse:5.0.2
    entrypoint: /entrypoint.sh  -g -s
    ports:
    - "9042:9042"
    - "8182:8182"
    - "9160:9160"
    - "7199:7199"
    cap_add:
    - IPC_LOCK
    ulimits:
      memlock: -1
    environment:
      SERVICE_9042_NAME: cassandra
    volumes:
    - "/home/armasuisse/data/cassandra:/var/lib/cassandra"
  dse-studio:
    image: trivadisbds/dse-studio:1.0.0
    ports:
      - "9091:9091"
    links: 
      - dse:dse
